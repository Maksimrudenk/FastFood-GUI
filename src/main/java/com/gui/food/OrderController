public class OrderController {
    private double total = 0.0;
    private RestaurantOrderSystem app;

    public OrderController(RestaurantOrderSystem app) { //Mutator Method
        this.app = app;
    }

    public void addToTotal(double amount) { //Sum of amount 
        total += amount;
        app.updateTotalDisplay(); //updates Interfaces Class
    }

    public double getTotal() { //Accessor method
        return total;
    }
}
